{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@src/*": [
        "*"
      ],
      "@app-types/*": [
        "types/*"
      ],
      "@app-prisma/*": [
        "../prisma/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@middlewares/*": [
        "middlewares/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@app-utils/*": [
        "utils/*"
      ],
      "@validators/*": [
        "validators/*"
      ]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "incremental": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "verbatimModuleSyntax": false,
    "moduleDetection": "force",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts",
    "prisma/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}