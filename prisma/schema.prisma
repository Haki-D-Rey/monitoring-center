generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  refreshToken  String?
  roleId    Int
  status  Boolean @default(true) 
  // Almacena con zona (timestamptz) y deja que Prisma lo auto-actualice:
  createdAt  DateTime  @default(now()) @db.Timestamptz(3)
  updatedAt  DateTime  @updatedAt      @db.Timestamptz(3)
  role      Role     @relation(fields: [roleId], references: [id])
  profile      ProfileUser? //  Relaci贸n 1:1 
   //  Relaci贸n inversa con AuditLog
  auditLogs    AuditLog[]
}

model PasswordReset {
  id                  String   @id @default(cuid())
  email               String
  codeHash            String    // hash del c贸digo de 6 d铆gitos
  expiresAt           DateTime  @db.Timestamptz(3) // vence el c贸digo
  attempts            Int       @default(0)
  usedAt              DateTime? @db.Timestamptz(3) // cuando se consumi贸 (evita reutilizar)
  resetTokenHash      String?   // hash del token temporal tras verificar el c贸digo
  resetTokenExpiresAt DateTime? @db.Timestamptz(3) // vence el token de reseteo
  ip                  String?
  userAgent           String?
  createdAt  DateTime  @default(now()) @db.Timestamptz(3)

  @@index([email, expiresAt])
}

model ProfileUser {
  id        Int     @id @default(autoincrement())
  userId    Int     @unique //  Relaci贸n uno a uno
  firstName String
  lastName  String
  address   String?
  email     String  @unique
  phone     String?
  cus       String? @unique // C贸digo nico del Sistema (CUS)
  
  // Profesionales
  profession    String?
  company       String?
  position      String?
  experience    Int?        // a帽os de experiencia
  linkedinUrl   String?
  githubUrl     String?
  skills        String[]    // lista de skills como array
  bio           String?     // resumen profesional

  status    Boolean  @default(true)
  createdAt  DateTime  @default(now()) @db.Timestamptz(3)
  updatedAt  DateTime  @updatedAt      @db.Timestamptz(3)

  user User @relation(fields: [userId], references: [id])
}

model Role {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  status  Boolean @default(true) 
  createdAt  DateTime  @default(now()) @db.Timestamptz(3)
  updatedAt  DateTime  @updatedAt     @db.Timestamptz(3)
  permissions RoleHasPermission[]
  users       User[]
}

model Permission {
  id    Int    @id @default(autoincrement())
  name  String @unique
  status  Boolean @default(true) 
  createdAt  DateTime  @default(now()) @db.Timestamptz(3)
  updatedAt  DateTime  @updatedAt      @db.Timestamptz(3)
  roles RoleHasPermission[]
}

model RoleHasPermission {
  id           Int         @id @default(autoincrement())
  roleId       Int
  permissionId Int
  status  Boolean @default(true) 
  createdAt  DateTime   @default(now()) @db.Timestamptz(3)
  updatedAt  DateTime   @updatedAt      @db.Timestamptz(3)
  role         Role        @relation(fields: [roleId], references: [id])
  permission   Permission  @relation(fields: [permissionId], references: [id])

  @@unique([roleId, permissionId]) //  Esto crea la clave 煤nica compuesta
}


model AuditLog {
  id          Int       @id @default(autoincrement())
  userId      Int?      // null si es guest
  module      String    // ej: "User", "Role", "Form"
  action      String    // ej: "CREATE", "UPDATE", "DELETE", "LOGIN"
  entityId    Int?      // id del registro afectado
  dataBefore  Json?     // snapshot antes (opcional)
  dataAfter   Json?     // snapshot despu茅s (opcional)
  ipAddress   String?   // IP del request
  userAgent   String?   // navegador / cliente
  createdAt  DateTime  @default(now()) @db.Timestamptz(3)

  user        User?     @relation(fields: [userId], references: [id])
}

